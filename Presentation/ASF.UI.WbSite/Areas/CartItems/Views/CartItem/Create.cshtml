@model ASF.Entities.CartItem
@using ASF.Entities
<link href="~/Content/LeatherGoods.css" rel="stylesheet" />

@{
    ViewBag.Title = "Agregar al Carrito";
}

<h2>Agregar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.Nombre</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Producto">Producto</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" value=@ViewBag.Nombre readonly="readonly" style="width: 25%;">
                <input type="hidden" value=@ViewBag.ProductId name="ProductId" id="ProductId">
                @Html.HiddenFor(model => model.CartId)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Descripcion">Descripcion</label>
            <div class="col-md-10">
                <textarea class="form-control text-box single-line valid" rows="4" readonly="readonly" style="width: 40%;">@ViewBag.Descripcion</textarea>
                @*<input class="form-control text-box single-line valid" value="@ViewBag.Descripcion" readonly="readonly" style="width: 25%;">*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" value=@ViewBag.Precio name="Price" id="Price" readonly="readonly" style="width: 25%;">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="form-control text-box single-line valid" type ="number" value=1 name="Quantity" id="Quantity" style="width: 60px;">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Image">Image</label>
            <div class="col-md-10">
                <img class="img-src" src="~/Uploads/@Url.Content(ViewBag.Imagen)" alt="..."\>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la Lista de Productos", "../../Products/Product/ProductList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
