@model IEnumerable<ASF.Entities.Client>
@using ASF.Entities

@{
    ViewBag.Title = "Index";
    var Country = "Country";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SignupDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rowid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderCount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    foreach (var std in ViewData["Country"] as IList<Country>)
    {
        if (std.Id == item.CountryId)
        {
            Country = std.Name;
            break;
        }
    }
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SignupDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rowid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderCount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
