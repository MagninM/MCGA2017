<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

<style>

  .cart-box{
  position: fixed;
  bottom: 40px;
  right: 30px;

  z-index: 2147483000;
  cursor: pointer;
  background-position: 50%;
}

.btn-circle {
  width: 30px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.428571429;
  border-radius: 15px;
}
.btn-circle.btn-lg {
  width: 50px;
  height: 50px;
  padding: 10px 16px;
  font-size: 18px;
  line-height: 1.33;
  border-radius: 25px;
}
.btn-circle.btn-xl {
  width: 76px;
  height: 76px;
  padding: 10px 16px;
  font-size: 29px;
  line-height: 1.33;
  border-radius: 60px;
}
.cart-items-count{
    position:relative;
    display:flex;
    text-align:center;
    justify-content: center;
    top:-55px;
}

.notification-counter {   
    position: absolute;
    left: -12px;
    background-color: rgba(212, 19, 13, 1);
    color: #fff;
    border-radius: 6px;
    padding: 1px 3px;
    font: 14px Verdana;
}

</style>

</head>
<body>
    
        <div class="cart-box" id="Normal">
@using (Html.BeginForm("Index", "CartItem", new { area = "CartItems" }, FormMethod.Get))
{
            <ul class="nav navbar-nav">
                <li class="dropdown">

                    <button type="submit" class="dropdown-toggle btn btn-primary btn-circle btn-xl" role="button" aria-expanded="false">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                        <span class="cart-items-count"><span class="notification-counter">@ViewBag.Cantidad</span></span>
                    </button>

                </li>
            </ul>
}
        </div>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Leather Goods", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>